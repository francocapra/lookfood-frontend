<mvc:View controllerName="gourmeo.resources.main.controllers.ItemManagement" 
    xmlns="sap.m" 
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns:l="sap.ui.layout" 
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">

    <Page title="{i18n>itemMgmtPageTitle}" id="pageItemsMgmt" showNavButton="true" navButtonPress="onNavButtonPress" noDataText="{i18n>tableItemsNoData}">
        <headerContent>
            <Button icon="sap-icon://add" press="onAddItemPress" />
            <Button icon="sap-icon://refresh" press="onRefreshItemsPress" />
        </headerContent>
        <content>
            <List
                items="{PartnerPrdCollection>/ProductCollection}"
                headerText="{i18n>listHeader}">
                <items>
                    <ObjectListItem
                        title="{PartnerPrdCollection>description}"
                        icon="imgs/food.png"
                        type="Active"
                        press="onListItemPress"
                        number="{PartnerPrdCollection>price}"
                        numberUnit="USD">
                        <firstStatus>
                            <ObjectStatus
                                text="Very Good"
                                state="Success" />
                            </firstStatus>
                            <attributes>
                                <ObjectAttribute text="{i18n>listItemId}: {PartnerPrdCollection>id}" />
                                <ObjectAttribute text="{i18n>listItemExtId}: {PartnerPrdCollection>idExternal}" />
                            </attributes>
                        </ObjectListItem>
                    </items>
                </List>
            </content>
        </Page>

    </mvc:View>