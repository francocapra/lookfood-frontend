<mvc:View controllerName="lookfood.resources.main.controllers.Review" 
    xmlns="sap.m" 
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns:l="sap.ui.layout" 
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">

    <Page id="pageReview" showNavButton="true" navButtonPress="onNavBack">
        <content>
            <VBox>
                <items>
                    <Panel class="sapUiSmallMarginTop" >
                        <headerToolbar>
                            <Toolbar height="3rem" >
                                <Title text="{i18n>highlights}" />
                                <ToolbarSpacer />
                                <Button icon="sap-icon://refresh" type="Emphasized" />
                            </Toolbar>
                        </headerToolbar>
                        <content>
                           <HBox aligntItems="Center" justifyContent="Center">
                            <GenericTile class="sapUiTinyMargin" header="Arroz a Grega"
                                subheader="Department" press="press">
                                <TileContent>
                                    <ImageContent src="imgs/food-tray.png" />
                                </TileContent>
                            </GenericTile>
                            <GenericTile class="sapUiTinyMargin" header="Lasanha"
                                subheader="Department" press="press">
                                <TileContent>
                                    <ImageContent src="imgs/food-tray.png" />
                                </TileContent>
                            </GenericTile>
                            <GenericTile class="sapUiTinyMargin" header="Feijoada com Samba"
                                subheader="Department" press="press">
                                <TileContent>
                                    <ImageContent src="imgs/food-tray.png" />
                                </TileContent>
                            </GenericTile>
                            <GenericTile class="sapUiTinyMargin" header="Arroz com Pagode"
                                subheader="Department" press="press">
                                <TileContent>
                                    <ImageContent src="imgs/food-tray.png" />
                                </TileContent>
                            </GenericTile>
                            <GenericTile class="sapUiTinyMargin" header="Tuti Frutti"
                                subheader="Department" press="press">
                                <TileContent>
                                    <ImageContent src="imgs/food-tray.png" />
                                </TileContent>
                            </GenericTile>
                        </HBox>
                    </content>
                </Panel>
                <List id="reviewItemsList" noDataText="{i18n>reviewListNoData}">
                    <headerToolbar>
                        <Toolbar>
                            <content>
                                <Title text="{i18n>reviewListHeader}" />
                            </content>
                        </Toolbar>
                    </headerToolbar>
                </List>
            </items>
        </VBox>
    </content>
    <footer>
        <Toolbar>
            <content>
                <ToolbarSpacer />
                <Button text="{i18n>startReviewBtn}" type="Emphasized" press="onStartReviewPress" />
            </content>
        </Toolbar>
    </footer>
</Page>

</mvc:View>