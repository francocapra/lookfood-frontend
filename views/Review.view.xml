<mvc:View controllerName="gourmeo.resources.main.controllers.Review" 
    xmlns="sap.m" 
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns:l="sap.ui.layout" 
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">

    <Page id="pageReview" showNavButton="true" navButtonPress="onNavButtonPress">
        <content>
            <VBox>
                <items>
                    <Panel class="sapUiSmallMarginTop" >
                        <headerToolbar>
                            <Toolbar height="3rem" >
                                <Title text="{i18n>highlights}" />
                                <ToolbarSpacer />
                                <Button icon="sap-icon://refresh" type="Emphasized" />
                            </Toolbar>
                        </headerToolbar>
                        <content>
                            <FlexBox id="partnerTopItems" alignItems="Center" justifyContent="Center" class="sapUiSmallMargin" />
                        </content>
                    </Panel>
                    <List id="reviewItemsList" noDataText="{i18n>reviewListNoData}">
                        <headerToolbar>
                            <Toolbar>
                                <content>
                                    <Title text="{i18n>reviewListHeader}" />
                                </content>
                            </Toolbar>
                        </headerToolbar>
                    </List>
                </items>
            </VBox>
        </content>
        <footer>
            <Toolbar>
                <content>
                    <ToolbarSpacer />
                    <Button text="{i18n>startReviewBtn}" type="Emphasized" press="onStartReviewPress" />
                </content>
            </Toolbar>
        </footer>
    </Page>

</mvc:View>