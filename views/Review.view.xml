<mvc:View controllerName="lookfood.resources.main.controllers.Review" 
    xmlns="sap.m" 
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns:l="sap.ui.layout" 
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">
    <Page id="pageReview" showNavButton="true" navButtonPress="onNavBack">
        <content>
            <VBox>
                <items>
                    <Panel class="sapUiSmallMarginTop" >
                        <headerToolbar>
                            <Toolbar height="3rem" >
                                <Title text="{i18n>highlights}" />
                                <ToolbarSpacer />
                                <Button icon="sap-icon://refresh" type="Emphasized" />
                            </Toolbar>
                        </headerToolbar>
                        <content>
                         <HBox aligntItems="Center" justifyContent="Center">
                            <GenericTile class="sapUiTinyMargin" header="{TopProducts>/0/description}" subheader="{i18n>topProductRate}: {TopProducts>/0/rate}" press="press">
                                <TileContent footer="{i18n>topProductId}: {TopProducts>/0/id}" >
                                    <ImageContent src="imgs/food-tray.png" />
                                </TileContent>
                            </GenericTile>
                            <GenericTile class="sapUiTinyMargin" header="{TopProducts>/1/description}" subheader="{i18n>topProductRate}: {TopProducts>/1/rate}" press="press">
                                <TileContent footer="{i18n>topProductId}: {TopProducts>/1/id}">
                                    <ImageContent src="imgs/food-tray.png" />
                                </TileContent>
                            </GenericTile>
                            <GenericTile class="sapUiTinyMargin" header="{TopProducts>/2/description}" subheader="{i18n>topProductRate}: {TopProducts>/2/rate}" press="press">
                                <TileContent footer="{i18n>topProductId}: {TopProducts>/2/id}">
                                    <ImageContent src="imgs/food-tray.png" />
                                </TileContent>
                            </GenericTile>
                            <GenericTile class="sapUiTinyMargin" header="{TopProducts>/3/description}" subheader="{i18n>topProductRate}: {TopProducts>/3/rate}" press="press">
                                <TileContent footer="{i18n>topProductId}: {TopProducts>/3/id}">
                                    <ImageContent src="imgs/food-tray.png" />
                                </TileContent>
                            </GenericTile>
                            <GenericTile class="sapUiTinyMargin" header="{TopProducts>/4/description}" subheader="{i18n>topProductRate}: {TopProducts>/4/rate}" press="press">
                                <TileContent footer="{i18n>topProductId}: {TopProducts>/4/id}">
                                    <ImageContent src="imgs/food-tray.png" />
                                </TileContent>
                            </GenericTile>
                        </HBox>
                    </content>
                </Panel>
                <List id="reviewItemsList" noDataText="{i18n>reviewListNoData}">
                    <headerToolbar>
                        <Toolbar>
                            <content>
                                <Title text="{i18n>reviewListHeader}" />
                            </content>
                        </Toolbar>
                    </headerToolbar>
                </List>
            </items>
        </VBox>
    </content>
    <footer>
        <Toolbar>
            <content>
                <ToolbarSpacer />
                <Button text="{i18n>startReviewBtn}" type="Emphasized" press="onStartReviewPress" />
            </content>
        </Toolbar>
    </footer>
</Page>

</mvc:View>